# ================================
# Miscellaneous
# ================================
APP_NAME=MyFlaskApp             # Your application's name
APP_VERSION=1.0.0               # Application version

# ================================
# Testing Configuration
# ================================
TESTING=True                    # Whether to run Flask in testing mode

# ================================
# General Settings
# ================================
FLASK_APP=app.py          # The entry point to your Flask application
FLASK_ENV=development     # Options: development, testing, production
FLASK_DEBUG=True          # Enable debugging in development

# ================================
# Secret Key (for sessions, CSRF, etc.)
# ================================
SECRET_KEY=your-secret-key-here  # Keep it secret, keep it safe

# ================================
# Database Configuration
# ================================
DATABASE_DRIVER=postgresql      # Options: postgresql, mysql, sqlite, etc.
DATABASE_HOST=localhost         # Your DB host, e.g., localhost
DATABASE_PORT=5432              # Default port for PostgreSQL
DATABASE_NAME=your_db_name      # Database name
DATABASE_USER=your_db_user      # Database username
DATABASE_PASSWORD=your_db_pass  # Database password

# SQLAlchemy Configuration
SQLALCHEMY_DATABASE_URI=postgresql://$DATABASE_USER:$DATABASE_PASSWORD@$DATABASE_HOST:$DATABASE_PORT/$DATABASE_NAME
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False

# ================================
# Mail Configuration (Optional)
# ================================
MAIL_HOST=smtp.mailtrap.io       # SMTP server
MAIL_PORT=587                    # SMTP port (e.g., 587 for TLS)
MAIL_USE_TLS=True                # Use TLS encryption
MAIL_USE_SSL=False               # Use SSL (optional)
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password

# ================================
# Logging Settings
# ================================
LOG_LEVEL=INFO                  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=app.log                # Log file name for application logs

# ================================
# 3rd Party API Keys
# ================================
STRIPE_SECRET_KEY=your-stripe-secret-key
SENDGRID_API_KEY=your-sendgrid-api-key
